<div class="panel">
	<div class="panel-heading" role="tab" id="{{name}}Heading{{id}}">
		<h3 class="panel-title">
			{{#if expanded}}
			<a data-toggle="collapse" href="#{{name}}Collapse{{id}}" aria-expanded="true" aria-controls="{{name}}Collapse{{id}}">{{title}}
			{{else}}
			<a class="collapsed" data-toggle="collapse" href="#{{name}}Collapse{{id}}" aria-expanded="false" aria-controls="{{name}}Collapse{{id}}">{{title}}
			{{/if}}
			<i class="material-icons expand-more">expand_more</i>
		</a>
		</h3>
	</div>
	{{#if expanded}}
	<div id="{{name}}Collapse{{id}}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="{{name}}Heading{{id}}">
	{{else}}
	<div id="{{name}}Collapse{{id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="{{name}}Heading{{id}}">
	{{/if}}
		{{>tabs-choose}}
	</div>
</div>